#include <iostream>
#include <vector>
using namespace std;

int main() {
    long long t;
    cin >> t;

    while (t--) {
        int n,k,x;
        cin>>n>>k>>x;
        vector<int>a;
        if(x!=1){
            cout<<"YES"<<endl;
            cout<<n<<endl;
            for(int i=0;i<n;i++){
                cout<<1<<" ";
            }
        }
        else{
            if(n%2==0 && k>=2){
                cout<<"YES"<<endl;
                cout<<n/2<<endl;
                for(int i=0;i<n/2;i++){
                    cout<<2<<" ";
                }
            }
            else{
                if(k>=3){
                    cout<<"YES"<<endl;
                    cout<<n/2<<endl;
                    cout<<3<<" ";
                    for(int i=0;i<n/2-1;i++){
                        cout<<2<<" ";
                    }
                }
                else{
                    cout<<"NO"<<endl;
                }
            }
        }
    }
    return 0;
}
