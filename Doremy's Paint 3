#include<iostream>
#include<vector>
#include<unordered_map>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<long long>arr(n);
        for(int i=0;i<n;i++)cin>>arr[i];
        unordered_map<long long,long long>freq;
        for(int i=0;i<n;i++){
            freq[arr[i]]++;
        }
        if(n<2){
            cout<<"YES"<<endl;
            continue;
        }
        if(freq.size()>2){
           cout<<"NO"<<endl;
           continue;
        }
        if(freq.size()==1){
            cout<<"YES"<<endl;
            continue;
        }
            auto it =freq.begin();
            long long count1=it->second;
            it++;
            long long count2=it->second;
            if(n%2==0){
                if(count1==count2){
                    cout<<"YES"<<endl;
                }
                else{
                    cout<<"NO"<<endl;
                }
            }
            else{
                if(abs(count1-count2)==1){
                    cout<<"YES"<<endl;
                }
                else{
                    cout<<"NO"<<endl;
                }
            }
        }
    return 0;
}
