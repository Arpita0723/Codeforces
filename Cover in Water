#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        string s;
        cin>>s;
        int con_dot=0;
        int dot=0;
        int i=0;
        bool found=false;
        while(i<n){
            if(s[i]=='.'){
                dot++;
                con_dot++;
                if(con_dot==3){
                    found=true;
                    break;
                }
                i++;
            }
            else{
                con_dot=0;
                i++;
            }
        }
        if(found){
            cout<<2<<endl;
        }
        else if(dot!=0){
            cout<<dot<<endl;
        }
        else{
            cout<<0<<endl;
        }
    }
    return 0;
}
