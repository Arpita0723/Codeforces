#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while(t--){
        long long x;
        long long y;
        cin>>x>>y;
        if(x==y || x-y==1 || y<2){
            cout<<"-1"<<endl;
        }
        else if(x<y){
            cout<<"2"<<endl;
        }
        else{
            cout<<"3"<<endl;
        }
    }
    return 0;}
