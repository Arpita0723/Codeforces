#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        long long a, b;
        int n;
        cin >> a >> b >> n;
        vector<long long> x(n);
        for (int i = 0; i < n; i++) {
            cin >> x[i];
        }

        long long total_increase = 0;
        for (int i = 0; i < n; i++) {
            total_increase += min(x[i], a - 1);
        }

        long long total_time = b + total_increase;
        cout << total_time << endl;
    }
    return 0;
}
