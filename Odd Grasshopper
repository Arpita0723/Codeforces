#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
using namespace std;
int main(){
   long long t;
   cin>>t;
   while(t--){
    long long x;
    cin>>x;
    long long n;
    cin>>n;
   if(x%2==0){
    if(n%4==1){
        x=x-n;
    }
    else if(n%4==2){
        x=x+1;
    }
    else if(n%4==3){
        x=x+n+1;
    }
   }
   else{
    if(n%4==1){
        x=x+n;
    }
    else if(n%4==2){
        x=x-1;
    }
    else if(n%4==3){
        x=x-n-1;
    }
   }
    cout<<x<<endl;
}
    return 0;
}
