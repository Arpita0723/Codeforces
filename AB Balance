#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
using namespace std;
int main(){
   long long t;
   cin>>t;
   while(t--){
    string s;
    cin>>s;
    int nab=0;
    int nba=0;
    int n=s.length();
    for(int i=0;i<n-1;i++){
        if(s[i] == 'a' && s[i+1] == 'b'){nab++;}
        else if(s[i] == 'b' && s[i+1] == 'a'){nba++;}
    }
    if(nab==nba){
        cout<<s<<endl;
        continue;}
    else {
        s[0]=s[n-1];
    }
    cout<<s<<endl;
}
    return 0;
}
