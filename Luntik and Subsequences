#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int main(){
   int t;
   cin>>t;
   while(t--){
    int n;
    cin>>n;
    vector<long long>a(n);
    long long s=0;
    long long c=1;
    for(int i=0;i<n;i++){
        cin>>a[i];
        if(a[i]==1){s++;}
        if(a[i]==0){c*=2;}
    }
    
   
    cout<<s*c<<endl;
   }
    return 0
