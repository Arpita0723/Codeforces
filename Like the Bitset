#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

int main(){
    long long t;
    cin >> t;
    while(t--){
        long long n, k;
        cin >> n >> k;
        string s;
        cin >> s;

        bool found = true;
        int len_1 = 0, max_len = 0;
        bool found_1 = false;

        // find max consecutive 1s
        for(int i=0;i<n;i++){
            if(s[i]=='1'){
                found_1 = true;
                len_1++;
                max_len = max(max_len, len_1);
            }
            else{
                len_1 = 0;
            }
        }

        // impossible case
        if((max_len >= k) || (k==1 && found_1)){
            cout << "NO\n";
            continue;
        }

        vector<long long> a(n);
        long long small_ele = 1, large_ele = n;

        for(int j=0;j<n;j++){
            if(s[j]=='1'){
                a[j] = small_ele++;
            }
            else{
                a[j] = large_ele--;
            }
        }

        cout << "YES\n";
        for(int i=0;i<n;i++){
            cout << a[i] << " ";
        }
        cout << "\n";
    }
    return 0;
}
