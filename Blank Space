#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<int>arr(n);
        for(int i=0;i<n;i++)cin>>arr[i];
        int len=0;
        for(int i=0;i<n;i++){
            if(arr[i]==0){
                int j=i;
                while(j<n && arr[j]==0)j++;
                len=max(len,j-i);
            }
        }
        cout<<len<<endl;
    }
    return 0;
}
