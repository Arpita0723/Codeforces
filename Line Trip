#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
        int n,x;
        cin>>n>>x;
        vector<int>arr(n);
        for(int i=0;i<n;i++){
            cin>>arr[i];
        }
        int diff=arr[0];
        for(int i=1;i<n;i++){
            diff=max(diff,arr[i]-arr[i-1]);
        }
        diff=max(diff,2*(x-arr[n-1]));
        cout<<diff<<endl;
    }
    return 0;
}
