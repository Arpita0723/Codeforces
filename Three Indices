#include <iostream>
#include <vector>
#include<algorithm>
using namespace std;

int main() {
   int t;
   cin>>t;
   while(t--){
    int n;
    cin>>n;
    vector<int>p(n);
    for(int i=0;i<n;i++){
        cin>>p[i];
    }
    bool found=false;
    for(int i=1;i<n-1;i++){
         if((p[i]>p[i-1]) && (p[i]>p[i+1])){
              found=true;
              cout<<"YES"<<endl;
              cout<<i<<" "<<i+1<<" "<<i+2<<" "<<endl;
              break;
         }
    }
    if(!found){
        cout<<"NO"<<endl;
    }
}
   return 0;
}
