#include <iostream>
#include <vector>
#include<algorithm>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<long long>a(n);
        for(int i=0;i<n;i++){
            cin>>a[i];
        }
        vector<long long>diff;
        for(int i=0;i<n-1;i++){
            diff.push_back(a[i+1]-a[i]);
        }
        int x=*min_element(diff.begin(),diff.end());
        if(x<0){
            cout<<0<<endl;
        }
        else{
            cout<<x/2+1<<endl;
        }
    }
return 0;}
